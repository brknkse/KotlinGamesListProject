<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginHorizontal="8dp"
    android:paddingTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemLayout"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/GameImage"
        android:layout_width="120dp"
        android:layout_height="104dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/gtav"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/gameName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Game Name"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"

        app:layout_constraintStart_toEndOf="@+id/GameImage"

        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnknownId" />
    <TextView
        android:id="@+id/gameMetacritic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="metacritic:"
        android:textSize="14dp"

        android:layout_marginTop="65dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/GameImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/gameScore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="154dp"
        android:layout_marginBottom="1dp"
        android:lineSpacingExtra="4dp"
        android:text="score"
        android:textColor="#F44336"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/gameGenre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnknownId" />
    <TextView
        android:id="@+id/gameGenre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:layout_marginStart="16dp"
        android:text="Genre"
        android:textColor="#8A8A8F"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/GameImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnknownId" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/GameImage"
        tools:ignore="MissingConstraints" />





</androidx.constraintlayout.widget.ConstraintLayout>